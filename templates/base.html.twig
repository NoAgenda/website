<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% set page_title = page_title is not defined ? 'No Agenda Experience' : "#{page_title} - No Agenda Experience" %}
    {% set page_description = page_description ?? null %}

    <title>{{ page_title }}</title>
    {% if page_description %}<meta name="description" content="{{ page_description }}">{% endif %}
    <link rel="icon" href="{{ asset('/favicon.ico') }}">

    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>
  <body data-authenticated="{{ authenticated ? 'true' : 'false' }}" {% block body_attributes '' %}>
    {% block body '' %}
    {% include 'blocks/token_modal.html.twig' %}

    {% block scripts %}
    {{ encore_entry_script_tags('app') }}
    {% include 'blocks/analytics.html.twig' %}
    {% endblock %}
  </body>
</html>
