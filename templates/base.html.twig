<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--
    {% block title '' %}
    No Agenda Player
    -->

    {% set page_title = block('title') == '' ? 'No Agenda Player' : block('title') ~ ' - No Agenda Player' %}

    <title>{{ page_title }}</title>

    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/assets/app.css') }}">
    {% endblock %}
  </head>
  <body {% block body_attributes '' %}>
    {% block body '' %}

    {% block scripts %}
    <script src="{{ asset('/assets/app.js') }}"></script>
    {% endblock %}
  </body>
</html>
