<div id="suggestionModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      {{ form_start(partSuggestionForm) }}
        <div class="modal-header">
          <h5 class="modal-title">Suggest a new chapter</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          {{ form_row(partSuggestionForm.position, {
            label: 'Select the position of the new chapter:',
          }) }}

          <div class="form-group">
            {{ form_label(partSuggestionForm.startsAt, 'Select the starting time of the new chapter:') }}
            <div>
              {{ form_widget(partSuggestionForm.startsAt, {attr: {class: 'd-inline w-auto', placeholder: '0:00:00'}}) }}
              <button type="button" class="btn btn-secondary d-inline">Grab current player time</button>
            </div>
            {{ form_errors(partSuggestionForm.startsAt) }}
         </div>

          {{ form_row(partSuggestionForm.name, {
            label: 'Select the name of the new chapter:',
            attr: {placeholder: 'Chapter name'},
          }) }}

          {{ form_rest(partSuggestionForm) }}

          {#<p>Select the position of the missing section:</p>#}
          {#<div class="form-group">#}
            {#<div class="form-check">#}
              {#<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>#}
              {#<label class="form-check-label" for="exampleRadios1">#}
                {#There was another section played <em>before</em>#}
              {#</label>#}
            {#</div>#}
            {#<div class="form-check">#}
              {#<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">#}
              {#<label class="form-check-label" for="exampleRadios2">#}
                {#There was another section played <em>after</em>#}
              {#</label>#}
            {#</div>#}
          {#</div>#}
          {#<p>Select the starting time of the missing section:</p>#}
          {#<div class="form-group">#}
            {#<input type="text" class="form-control d-inline w-auto" placeholder="0:00:00">#}
            {#<button type="button" class="btn btn-secondary d-inline">Grab current player time</button>#}
          {#</div>#}
          {#<p>Select the name of the new section:</p>#}
          {#<input type="text" class="form-control" placeholder="Section name">#}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create suggestion</button>
        </div>
      {{ form_end(partSuggestionForm) }}
    </div>
  </div>
</div>
