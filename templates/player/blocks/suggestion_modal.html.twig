<div id="suggestionModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      {{ form_start(partSuggestionForm) }}
        <div class="modal-header">
          <h5 class="modal-title">Suggest a new chapter</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <span class="form-errors"></span>

          {{ form_row(partSuggestionForm.position, {
            label: 'Select the position of the new chapter:',
          }) }}

          <div class="form-group">
            {{ form_label(partSuggestionForm.startsAt, 'Select the starting time of the new chapter:') }}
            <div>
              {{ form_widget(partSuggestionForm.startsAt, {attr: {class: 'd-inline w-auto', placeholder: '0:00:00'}}) }}
              <button type="button" class="btn btn-secondary d-inline">Grab current player time</button>
            </div>
            <span class="startsAt-errors"></span>
         </div>

          <div class="form-group">
            {{ form_label(partSuggestionForm.name, 'Select the name of the new chapter:') }}
              {{ form_widget(partSuggestionForm.name, {attr: {placeholder: 'Chapter name'}}) }}
            <span class="name-errors"></span>
         </div>

          {{ form_rest(partSuggestionForm) }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create suggestion</button>
        </div>
      {{ form_end(partSuggestionForm) }}
    </div>
  </div>
</div>
