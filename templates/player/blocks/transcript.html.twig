<ul class="site-transcript-lines list-unstyled">
  {% for line in transcriptLines %}
  <li
    class="site-transcript-line media py-1"
    data-timestamp="{{ line.timestamp }}"
    {# data-duration="{{ line.duration }}" #}
  >
    <div class="transcript-action text-right mr-3">
      <span class="transcript-focus float-left">
        <span
          class="cursor-pointer d-none d-md-inline"
          role="button"
          title="Copy link for transcript to clipboard"
          data-clipboard="{{ url('player', {episode: episode.code, transcript: line.timestamp|prettyTimestamp}) }}"
        >
          <span class="fas fa-sm fa-link fa-fw ml-2" aria-hidden="true"></span>
        </span>
        <na-audio-timestamp data-target="episodePlayer" data-timestamp="{{ line.timestamp }}">
          <span class="cursor-pointer" role="button" title="Start playing at this position">
            <span class="fas fa-sm fa-play ml-2" aria-hidden="true"></span>
          </span>
        </na-audio-timestamp>
      </span>
      <span class="transcript-text">{{ line.timestamp|prettyTimestamp }}</span>
    </div>
    <div class="media-body">
      {{ line.text }}
    </div>
  </li>
  {% endfor %}
</ul>

<div class="position-sticky text-center" style="bottom: 150px;">
  <div class="btn btn-sm btn-secondary d-none" role="button" aria-hidden="true" data-reset-transcripts>Scroll to current position</div>
</div>

<div class="p-3">
  <a class="text-muted" href="https://natranscript.online/tr/">Transcripts generated by natranscript.online</a>
</div>
