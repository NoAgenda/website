<div class="bg-gray d-inline-block p-1 my-1 rounded">
  <span title="Sharing Box">
    <span class="fas fa-share-square fa-fw fa-lg" aria-hidden="true"></span>
  </span>
  <a
    class="cursor-pointer d-inline-block" title="Share on Facebook" href="https://www.facebook.com/sharer/sharer.php?u={{ url }}" target="_blank"
    {% if dynamic is defined and dynamic %}data-player-data="timer-attribute" data-player-attribute="href"{% endif %}
  >
    <span class="fab fa-facebook-square fa-fw fa-lg text-facebook" aria-hidden="true"></span>
  </a>
  <a
    class="cursor-pointer d-inline-block" title="Share on Twitter" href="https://twitter.com/intent/tweet?text={{ title }} {{ url }}" target="_blank"
    {% if dynamic is defined and dynamic %}data-player-data="timer-attribute" data-player-attribute="href"{% endif %}
  >
    <span class="fab fa-twitter fa-fw fa-lg text-twitter" aria-hidden="true"></span>
  </a>
  <div
    class="cursor-pointer d-inline-block" title="Copy link to clipboard" data-clipboard="{{ url }}"
    {% if dynamic is defined and dynamic %}data-player-data="timer-attribute" data-player-attribute="data-clipboard"{% endif %}
  >
    <span class="fas fa-link fa-fw" aria-hidden="true"></span>
  </div>
</div>
