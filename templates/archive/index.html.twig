{% extends 'layout.html.twig' %}

{% block title %}Archive{% endblock %}

{% block content %}
<div class="container">
  <h1 class="my-3">Archive</h1>

  <div class="btn-toolbar my-3" role="toolbar">
    {% include 'archive/parts/buttons.html.twig' %}
    <div class="flex-grow-1"></div>
    <div class="btn-group d-none d-sm-inline-flex" role="group">
      <button type="button" class="btn btn-primary" data-archive-layout="grid"><span class="far fa-th"></span></button>
      <button type="button" class="btn btn-outline-primary" data-archive-layout="list"><span class="far fa-list-alt"></span></button>
    </div>
  </div>

  <div class="row no-gutters my-3" data-archive-container>
    {% for episode in pager.currentPageResults %}
      <div class="col-sm-6 col-lg-3" data-archive-column>
      {% include 'archive/parts/item.html.twig' %}
    </div>
    {% endfor %}
  </div>

  <div class="d-flex justify-content-center my-3">
    <div class="d-md-none">
      {{ pagerfanta(pager, 'twitter_bootstrap4', {
        'prev_message': '<span class="fas fa-angle-left mr-2"></span> Newer',
        'next_message': 'Older <span class="fas fa-angle-right ml-2"></span>',
        'css_container_class': 'pagination m-0',
        'omitFirstPage': true,
        'proximity': 0,
      }) }}
    </div>
    <div class="d-none d-md-block">
      {{ pagerfanta(pager, 'twitter_bootstrap4', {
        'prev_message': '<span class="fas fa-angle-left mr-2"></span> Newer',
        'next_message': 'Older <span class="fas fa-angle-right ml-2"></span>',
        'css_container_class': 'pagination m-0',
        'omitFirstPage': true,
      }) }}
    </div>
  </div>
</div>
{% endblock %}
